<% layout('/layouts/boilerplate.ejs') -%>


<div class="row">
    <div class="col-8 offset-2">
    <form class="m-4" method="POST" action="/listings"   enctype="multipart/form-data">
        <h1>Create New Listing</h1>
        <div class="mb-3">
             <label for="title" class="form-label">Title:</label>
        <input type="text" class="form-control" placeholder="enter title" name="title" id="title" required>
           <div class="valid-feedback">
      Looks good!
         </div>
        </div>
      
       
        <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
        <textarea name="description"  class="form-control" id="description" required></textarea>
        
        </div>
        
         <div class="mb-3">
             <label for="title" class="form-label">Upload Image</label>
        <input type="file" class="form-control" name="image" id="title" required> 
        </div>


        
        <div class="row">
         <div class="mb-3 col-md-4">
             <label for="title" class="form-label">Price:</label>
        <input type="text" class="form-control" placeholder="enter price" name="price" id="title" required>
        </div>
      
        <div class="mb-3 col-md-8">
             <label for="title" class="form-label">Country Name:</label>
        <input type="text" class="form-control" placeholder="enter Country name" name="country" id="title" required>
        </div>
        </div>
          <div class="mb-3">
             <label for="title" class="form-label">Location:</label>
        <input type="text" class="form-control" placeholder="enter location" name="location" id="title" required>
        </div>
        
        <button class="btn btn-dark add-btn" type="submit">Add</button>

    </form>
    </div>
</div>
